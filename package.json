{
  "name": "CryptoPanel4u",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.2.1",
    "axios": "^0.21.1",
    "chart.js": "^2.8.0",
    "fuzzy": "^0.1.3",
    "react": "^16.10.2",
    "react-chartjs-2": "^2.8.0",
    "react-dom": "^16.10.2",
    "react-icons": "^3.7.0",
    "react-scripts": "3.2.0",
    "react-toggle": "^4.1.1",
    "styled-components": "^4.4.0",
    "styled-theming": "^2.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:all": "npm test -- --coverage --watchAll",
    "eject": "react-scripts eject",
    "deploy": "npm run build && firebase deploy"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/GlobalStyle.js",
      "!src/serviceWorker.js",
      "!src/hooks/*.js",
      "!src/context/*.js",
      "!src/helpers/*.js",
      "!src/data/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 88,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^24.0.18"
  }
}
